<h1>Edit Article</h1> 

<%if @article.errors.any?%>
    <h2>The following errors prevented the edit of this article</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
        
         <li><%=msg%></li>
        
    <% end %>
    </ul>
<% end %>


<%= form_with model: @article do |f| %>

    <div>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :description %><br>
        <%= f.text_area :description %><br>
    </div>


    <div>
        <%= f.submit %>
    </div>

<% end %>